<%= form_for ([@user, @transaction]) do |f| %>
    <%= f.collection_select :category_id, Category.all, :id, :name %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :amount %>
    <%= f.text_field :amount %>
    <%= f.submit %>
<% end %>
<%= link_to "delete", user_transaction_path, method: :delete, data: { confirm: "Are you sure?" }%>
