<div class="container">
  <h2>Let's look at your expenses: </h2>
    <%total_spent = 0 %>
    <% current_user.categories.each do |category| %>

        <h3><%= link_to category.name, edit_category_path(category) %></h3>

      <ol>
      <% category.transactions.where(user_id: current_user.id).most_recent.each do |ts| %>
        <li><%= link_to ts.description, edit_user_transaction_path(current_user, ts) %> - $ <%= ts.amount %></li>

      <% end %>
      <br>
      <h4>Category Total: $ <%= category.category_total%></h4>
      <h4>Your monthly budget for <%= category.name %> is $ <%=category.monthly_budget%></h4>
      <% if category.status == "good" %>
         <span class="emoji">ğŸ˜ƒ</span>
      <% elsif category.status == "not good" %>
        <span class="emoji">â˜¹ï¸</span>
      <% end %>
      <%=category.status%>
      <br>
      </ol>
      <%total_spent += category.category_total %>
    <% end %>
    <br>
    <h3>You have spent $ <%=total_spent %> so far!</h3>
    <br>
    <div id="form">
      <%= render 'transactions/form' %>
    </div>
    <br>
</div>
