<% if !flash.empty? %>
    <div id="flash">
        <% flash.keys.each do |k| %>
            <div class="<%= k %>">
                <%= flash[k] %>
            </div>
        <% end %>
    </div>
<% end %>

<h1>Welcome! <%= current_user.name%></h1>

<div class="user_show_page">
  <div class="income">
    <h2 class="inc_title">Income</h2>
    <%= render 'income' %>
    <div class="income_list">
    </div>
  </div>

  <div class="expense">
    <div class="container" id="expense_list">
      <h2><%= link_to "Expense", user_transactions_path(current_user), class: "exp_title"%></h2>
      
    </div>
  </div>

  <div class="saving_goal">
    <h2 class="sg_title">Saving Goal</h2>
    <%= render 'saving_goal' %>
    <div class="saving_goal_list">
    </div>
  </div>

</div>

<div class="center">
  <%= button_to "Log Out", signout_path, method: :delete %>
</div>
